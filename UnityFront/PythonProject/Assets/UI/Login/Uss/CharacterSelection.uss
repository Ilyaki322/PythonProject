/* CharacterSelectionPage.uss */

.selection-panel {
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  flex-grow: 1;
  display: none;
}

.character-list {
  flex-basis: 65%;
  flex-grow: 1;
  margin-right: 20px;
}

.btn-play {
  background-color: #d4e20e;
  color: #333;
  padding: 20px 40px;
  font-size: 36px;
  border-radius: 8px;
  align-self: center;
}
